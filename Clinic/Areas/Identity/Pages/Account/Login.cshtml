@page
@model Clinic.Areas.Identity.Pages.Account.LoginModel
@{
}
<h2>@ViewData["Title"]</h2>

<form method="post" asp-antiforgery="true">
    @Html.AntiForgeryToken()
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Credentials.Username" class="control-label"></label>
        <input asp-for="Credentials.Username" name="Credentials.Username" class="form-control" />
        <span asp-validation-for="Credentials.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credentials.Password" class="control-label"></label>
        <input asp-for="Credentials.Password" name="Credentials.Password" type="password" class="form-control" />
        <span asp-validation-for="Credentials.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Login"/>
    </div>
</form>