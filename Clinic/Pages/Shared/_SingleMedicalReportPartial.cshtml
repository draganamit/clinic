@model Clinic.Models.DTOs.MedicalReportDto
<div class="card">
    <form method="post" id="medicalReportFormCard_@Model.Id">
        @if(Model.Id == 0)
        {
        <div id="MedicalReports" class="card-header">
            <h4>Dodavanje nalaza</h4>
        </div>
        }
    <div class="card-header">
        <div class="container">
            <div class="row">
                <div class="col-auto">
                    <div class="form-group">
                            <input asp-for="CreatedAt" type="date" id="createdAt" name="CreatedAt" class="form-control"  />
                    </div>
                </div>

                <div class="col-auto">
                    <div class="form-group">
                            <input asp-for="Hours" type="number" id="hours" name="Hours" class="form-control" min="0" max="23"  />
                    </div>
                </div>

                <div class="col-auto">
                    <div class="form-group">
                            <input asp-for="Minutes" type="number" id="minutes" name="Minutes" class="form-control" min="0" max="59"  />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
            <input asp-for="Id" type="hidden" id="id" name="Id" />
            <input asp-for="AdmissionId" type="hidden" id="admissionId" name="AdmissionId"  />

            <div class="form-group">
                <textarea asp-for="ReportDescription" id="reportDescription" name="ReportDescription" class="form-control h-150px"></textarea>
            </div>
            <div class="form-group">
                @if(Model.Id == 0){
                    <button type="submit" class="btn btn-primary">Sačuvaj</button>
                }
                else
                {
                    <button id="editButton" type="button" class="btn btn-primary" onclick="editReport(@Model.Id)">Sačuvaj</button>
                    <button type="button" class="btn btn-primary" onclick="deleteReport(@Model.Id)">Obriši</button>
                    <span hidden id="editReportMessage"></span>
                }

            </div>
    </div>
</form>
</div>


